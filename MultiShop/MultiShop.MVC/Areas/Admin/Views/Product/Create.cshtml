@{
    ViewBag.Title = "Create Product";
}
@model ProductCreateVM
<div class="container text-center">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header mb-3 d-flex justify-content-between align-items-center">
                    <h6 class="font-weight-bold text-primary">Create Product</h6>
                    <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary">Return List</a>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="@Model.Name" class="form-label"></label>
                            <input asp-for="@Model.Name" class="form-control" aria-describedby="emailHelp">
                            <span asp-validation-for="@Model.Name" class="form-text text-small text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Image" class="form-label"></label>
                            <input asp-for="@Model.Image" accept="image" class="form-control" aria-describedby="emailHelp">
                            <span asp-validation-for="@Model.Image" class="form-text text-small text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Price" class="form-label"></label>
                            <input asp-for="@Model.Price" class="form-control" aria-describedby="emailHelp">
                            <span asp-validation-for="@Model.Price" class="form-text text-small text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.DiscountinuedPrice" class="form-label"></label>
                            <input asp-for="@Model.DiscountinuedPrice" class="form-control" aria-describedby="emailHelp">
                            <span asp-validation-for="@Model.DiscountinuedPrice" class="form-text text-small text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Rating" class="form-label"></label>
                            <input asp-for="@Model.Rating" accept="image" class="form-control">
                            <span asp-validation-for="@Model.Rating" class="form-text text-small text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.RatingCount" class="form-label"></label>
                            <input asp-for="@Model.RatingCount" accept="image" class="form-control">
                            <span asp-validation-for="@Model.RatingCount" class="form-text text-small text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.CategoryId" class="form-label"></label>
                            <select class="form-select" asp-for="@Model.CategoryId">
                                <option selected disabled>Select Category</option>
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                                <span asp-validation-for="CategoryId" class="text-small text-danger"></span>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>