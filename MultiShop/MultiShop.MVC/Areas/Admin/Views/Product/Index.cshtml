@{
    ViewBag.Title = "Product List";
    int count = 1;
}
@model List<Product>
<div class="container text-center">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header mb-3 d-flex justify-content-between align-items-center">
                    <h6 class="font-weight-bold text-primary">Product List</h6>
                    <a asp-action="Create" asp-controller="Product" class="btn btn-outline-primary">Create Product</a>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Category</th>
                                <th scope="col">Price</th>
                                <th scope="col">Discountinued Price</th>
                                <th scope="col">Rating and Count</th>
                                <th scope="col">Created Time</th>
                                <th scope="col">Updated Time</th>
                                <th scope="col">Update</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Show/Hide</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="col">@(count++)</td>
                                    <td scope="col"><img src="~/imgs/categories/@item.ImageUrl" width="50px" /></td>
                                    <td scope="col">@item.Name</td>
                                    <td scope="col">@item.?Category.Name</td>
                                    <td scope="col">@item.Price</td>
                                    <td scope="col">@(item.DiscountinuedPrice == null ? "-" : item.DiscountinuedPrice)</td>
                                    <td scope="col">@item.Rating @item.RatingCount</td>
                                    <td scope="col">@(item.UpdateTime == null ? "-" : item.UpdateTime)</td>
                                    <td scope="col">
                                        <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                    </td>
                                    <td scope="col">
                                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                    <td scope="col">
                                        <a asp-action="@(item.IsDeleted ? "Show" : "Hide")"
                                           asp-controller="Product"
                                           asp-route-id="@item.Id"
                                           class="btn @(item.IsDeleted ? "btn-outline-secondary" : "btn-outline-warning")">
                                            <i class="fa-solid
                                               @(item.IsDeleted ? "fa-eye-slash" : "fa-eye")"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>